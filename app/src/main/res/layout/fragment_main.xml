<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/white"
tools:context="calibrage.payzanagent.fragments.AggrementDocumentsFragment">

    <LinearLayout
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:id="@+id/lyt_agenttransaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:weightSum="2">

            <android.support.v7.widget.CardView
                app:cardBackgroundColor="@color/btnPressedColor"
                android:layout_width="180dp"
                android:layout_height="115dp"
                android:layout_weight="1"
                android:layout_margin="3dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txt_count1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:text=" "
                        android:textColor="@color/white"
                        android:textSize="30dp" />
                    <TextView
                        android:textColor="@color/white"
                        android:id="@+id/txt_status_type1"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/agent_requests"
                        />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                app:cardBackgroundColor="@color/new_blue"
                android:layout_width="180dp"
                android:layout_height="115dp"
                android:layout_weight="1"
                android:layout_margin="3dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="6dp"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:id="@+id/txt_count2"
                        android:layout_marginTop="20dp"
                        android:layout_height="wrap_content"
                        android:text=" "
                        android:textSize="30dp"
                        android:layout_gravity="center_horizontal"/>
                    <TextView
                        android:textColor="@color/white"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/txt_status_type2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/yet_to_go"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:weightSum="2">

            <android.support.v7.widget.CardView
                app:cardBackgroundColor="@color/new_yellow"
                android:layout_width="180dp"
                android:layout_height="115dp"
                android:layout_weight="1"
                android:layout_margin="3dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="6dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_count3"
                        android:layout_marginTop="20dp"
                        android:text=" "
                        android:textSize="30dp"
                        android:layout_gravity="center_horizontal"/>
                    <TextView
                        android:textColor="@color/white"
                        android:id="@+id/txt_status_type3"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/un_verified"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                app:cardBackgroundColor="#FB4EDF6D"
                android:layout_width="180dp"
                android:layout_height="115dp"
                android:layout_weight="1"
                android:layout_margin="3dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="6dp"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:id="@+id/txt_count4"
                        android:text=" "
                        android:textSize="30dp"
                        android:layout_gravity="center_horizontal"/>
                    <TextView
                        android:textColor="@color/white"
                        android:id="@+id/txt_status_type4"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/verified"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/lyt_margin_top"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/lyt_margin_top"
        android:layout_marginBottom="@dimen/lyt_margin_bottom">


        <calibrage.payzanagent.controls.CommonButton
            android:id="@+id/btn_newAgent"
            android:layout_width="1dp"
            android:layout_height="@dimen/txt_height"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/btn_margin_right"
            android:background="@drawable/roundbutton"
            android:text="@string/new_agent"
            android:textAllCaps="false"
            android:textColor="@color/White" />
        <calibrage.payzanagent.controls.CommonButton
            android:id="@+id/btn_agentRequests"
            android:layout_width="1dp"
            android:layout_height="@dimen/txt_height"
            android:layout_weight="1"
            android:background="@drawable/roundbutton"
            android:text="@string/pic_agent"
            android:textAllCaps="false"
            android:textColor="@color/White" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/lyt_margin_top">


        <calibrage.payzanagent.controls.CommonButton
            android:id="@+id/btn_yetToVerify"
            android:layout_width="1dp"
            android:layout_height="@dimen/txt_height"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/btn_margin_right"
            android:background="@drawable/roundbutton"
            android:text="@string/in_progress"
            android:textAllCaps="false"
            android:textColor="@color/White" />
        <calibrage.payzanagent.controls.CommonButton
            android:id="@+id/btn_approvedAgents"
            android:layout_width="1dp"
            android:layout_height="@dimen/txt_height"
            android:layout_weight="1"
            android:background="@drawable/roundbutton"
            android:text="@string/approved_agents"
            android:textAllCaps="false"
            android:textColor="@color/White" />

    </LinearLayout>
