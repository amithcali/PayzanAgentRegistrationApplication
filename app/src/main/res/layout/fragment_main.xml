<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="calibrage.payzanagent.fragments.AggrementDocumentsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/lyt_agenttransaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/refresh"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:srcCompat="@drawable/ic_refresh"
                android:scaleType="fitXY"
                android:layout_gravity="end"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <android.support.v7.widget.CardView
                android:layout_width="180dp"
                android:layout_height="115dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/btnPressedColor"
                app:cardCornerRadius="0dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_count1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:text=" "
                        android:textColor="@color/white"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/txt_status_type1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/agent_requests"
                        android:textColor="@color/white" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="180dp"
                android:layout_height="115dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/new_blue"
                app:cardCornerRadius="0dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_count2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:text=" "
                        android:textColor="@color/white"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/txt_status_type2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/yet_to_go"
                        android:textColor="@color/white" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <android.support.v7.widget.CardView
                android:layout_width="180dp"
                android:layout_height="115dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/new_yellow"
                app:cardCornerRadius="0dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_count3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:text=" "
                        android:textColor="@color/white"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/txt_status_type3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/un_verified"
                        android:textColor="@color/white" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="180dp"
                android:layout_height="115dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                app:cardBackgroundColor="#FB4EDF6D"
                app:cardCornerRadius="0dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_count4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:text=" "
                        android:textColor="@color/white"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/txt_status_type4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/verified"
                        android:textColor="@color/white" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/lyt_margin_top"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/lyt_margin_bottom"
                android:layout_marginTop="@dimen/lyt_margin_top">


                <calibrage.payzanagent.controls.CommonButton
                    android:id="@+id/btn_newAgent"
                    android:layout_width="1dp"
                    android:layout_height="@dimen/txt_height"
                    android:layout_marginRight="@dimen/btn_margin_right"
                    android:layout_weight="1"
                    android:background="@drawable/roundbutton"
                    android:text="@string/new_agent"
                    android:textAllCaps="false"
                    android:textColor="@color/White" />

                <calibrage.payzanagent.controls.CommonButton
                    android:id="@+id/btn_agentRequests"
                    android:layout_width="1dp"
                    android:layout_height="@dimen/txt_height"
                    android:layout_weight="1"
                    android:background="@drawable/roundbutton"
                    android:text="@string/pic_agent"
                    android:textAllCaps="false"
                    android:textColor="@color/White" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/lyt_margin_top">


                <calibrage.payzanagent.controls.CommonButton
                    android:id="@+id/btn_yetToVerify"
                    android:layout_width="1dp"
                    android:layout_height="@dimen/txt_height"
                    android:layout_marginRight="@dimen/btn_margin_right"
                    android:layout_weight="1"
                    android:background="@drawable/roundbutton"
                    android:text="@string/in_progress"
                    android:textAllCaps="false"
                    android:textColor="@color/White" />

                <calibrage.payzanagent.controls.CommonButton
                    android:id="@+id/btn_approvedAgents"
                    android:layout_width="1dp"
                    android:layout_height="@dimen/txt_height"
                    android:layout_weight="1"
                    android:background="@drawable/roundbutton"
                    android:text="@string/approved_agents"
                    android:textAllCaps="false"
                    android:textColor="@color/White" />

            </LinearLayout>
            <!--   <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:layout_marginTop="100dp">


               <calibrage.payzanagent.controls.CommonButton
                   android:id="@+id/btn_settings"
                   android:layout_marginBottom="@dimen/lyt_margin_bottom"
                   android:layout_width="250dp"
                   android:layout_height="@dimen/btn_height"
                   android:layout_marginTop="@dimen/lyt_margin_top"
                   android:background="@drawable/roundbutton"
                   android:text="Settings"
                   android:textStyle="bold"
                   android:textAllCaps="false"
                   android:textColor="@color/White"
                   android:textSize="@dimen/btn_FontSize" />

               </LinearLayout>
           -->
        </LinearLayout>


    </LinearLayout>
    </ScrollView>
</LinearLayout>