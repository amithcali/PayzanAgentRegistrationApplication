<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:padding="8dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_margin="6dp">

                <TextView
                    android:id="@+id/tracking_list_agentname"
                    style="@style/NWCListSubTitle"
                    android:text="gcvgf" />

                <TextView
                    android:id="@+id/tracking_list_mobilenumber"
                    style="@style/NWCListSubTitle"
                    android:textColor="@color/Maroon"
                    android:text="gcvgf"/>

                <TextView
                    android:id="@+id/tracking_list_email"
                    style="@style/NWCListSubTitle"
                    android:text="gcvgf"/>
                <TextView
                    android:id="@+id/tracking_list_address"
                    style="@style/NWCListSubTitle"
                    android:text="gcvgf"/>
            </LinearLayout>
            <!--
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tracking_list_businesscategory"
                        style="@style/NWCListSubTitle"
                        android:text="gcvgf"/>



                </LinearLayout>-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/fourDp">
                <Button
                    android:visibility="gone"
                    android:id="@+id/btn_pick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/add_btn"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:background="@color/Maroon"
                    />
                <Button
                    android:visibility="gone"
                    android:id="@+id/btn_hold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hold_btn"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/btn_margin_left"
                    android:background="@color/cardview_dark_background"
                    android:layout_weight="0.5"
                    />
                 <ImageView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_weight="0.5"
                     app:srcCompat="@drawable/ic_tick_mark"
                    />


            </LinearLayout>

        </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Comments"
                android:layout_margin="@dimen/fiveDp"
                android:textColor="@color/Black"
                android:background="@drawable/border_comment_box"
                android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
                android:id="@+id/openComment"/>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fiveDp"
                android:background="@drawable/border_accent"
                android:id="@+id/commentRecylerview">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
        <!-- <View
             android:layout_width="match_parent"
             android:layout_height="0.5dp"
             android:background="@color/Maroon"
             android:alpha="0.5"
             android:layout_alignParentBottom="true"
             />-->
    </android.support.v7.widget.CardView>
</RelativeLayout>